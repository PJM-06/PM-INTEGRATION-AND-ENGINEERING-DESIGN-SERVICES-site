  <!-- SCRIPTS -->
  <script>
    // Popup
    function toggleForm() {
      document.getElementById('popupForm').classList.toggle('hidden');
      document.getElementById('popupForm').classList.toggle('flex');
    }

    // Mobile nav
    const navToggle2 = document.getElementById('navToggle2');
    const mobileMenu2 = document.getElementById('mobileMenu2');
    navToggle2?.addEventListener('click', () => mobileMenu2.classList.toggle('hidden'));

    // Thesis slider
    let thesisIndex = 0;
    const thesisSlider = document.getElementById("thesisSlider");
    const thesisSlides = thesisSlider?.children;
    function showSlide(index) {
      if (!thesisSlides) return;
      if (index >= thesisSlides.length) thesisIndex = 0;
      if (index < 0) thesisIndex = thesisSlides.length - 1;
      thesisSlider.style.transform = `translateX(${-thesisIndex * 100}%)`;
    }
    function nextSlide() { thesisIndex++; showSlide(thesisIndex); }
    function prevSlide() { thesisIndex--; showSlide(thesisIndex); }
    setInterval(() => nextSlide(), 5000);

    // Current year
    document.getElementById('currentYearProjects').textContent = new Date().getFullYear();

    lucide.createIcons();
  </script>
