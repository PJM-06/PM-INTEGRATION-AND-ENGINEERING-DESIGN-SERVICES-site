  <!-- POPUP FORM (same as index) -->
  <div id="popupForm" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-8 max-w-md w-full shadow-lg text-black">
      <h2 class="text-2xl font-bold mb-4">Request Form</h2>
      <form action="https://formsubmit.co/pjdaet8@gmail.com" method="POST" class="space-y-4">
        <input type="hidden" name="_captcha" value="false">
        <input type="hidden" name="_template" value="box">
        <input type="hidden" name="_subject" value="New Consultation or Quotation Request!">
        <input type="hidden" name="_next" value="thank-you.html">
        <input type="text" name="name" placeholder="Your Full Name" required class="w-full p-2 border rounded" />
        <input type="email" name="email" placeholder="Your Email Address" required class="w-full p-2 border rounded" />
        <input type="text" name="project" placeholder="Project Type (e.g., Residential, Warehouse)" class="w-full p-2 border rounded" />
        <textarea name="message" rows="4" placeholder="Your message or project requirements" class="w-full p-2 border rounded" required></textarea>
        <div class="flex justify-between">
          <button type="submit" class="bg-red text-white px-4 py-2 rounded hover:bg-red-600 transition">Send Message</button>
